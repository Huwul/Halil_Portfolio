# Server Configuration
PORT=3001
NODE_ENV=production
CLIENT_URL=https://yourapp.vercel.app
PRODUCTION_URL=https://yourapp.vercel.app

# Database
# For Docker: mongodb://mongo:27017/portfolio
# For Cloud: mongodb+srv://user:pass@cluster.mongodb.net/portfolio
MONGODB_URI=mongodb://mongo:27017/portfolio

# SECURITY: MUST CHANGE THESE IN PRODUCTION
# Generate with: openssl rand -base64 32
ADMIN_KEY=CHANGE_THIS_TO_SECURE_RANDOM_KEY_32_CHARS_MIN
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_KEY_64_CHARS_MIN

# Database Authentication (REQUIRED for production)
MONGO_USER=admin
MONGO_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Email Configuration (Optional - for contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
CONTACT_EMAIL=your-email@gmail.com